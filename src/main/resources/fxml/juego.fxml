<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="650.0" maxWidth="1000.0" minHeight="650.0" minWidth="1000.0" prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #1B1B1B;" xmlns:fx="http://javafx.com/fxml">
    <center>
        <StackPane>
            <children>
                <ImageView fitHeight="360.0" fitWidth="360.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/base.png" />
                    </image>
                </ImageView>
                <GridPane fx:id="tableroJuego" alignment="center" maxHeight="360.0" maxWidth="360.0" minHeight="360.0" minWidth="360.0" prefHeight="360.0" prefWidth="360.0" />
            </children>
        </StackPane>
    </center>
    <left>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="40.0">
         <children>
            <ImageView fx:id="player1" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            <Label text="PLAYER 1" textFill="WHITE">
               <font>
                  <Font name="Yu Gothic Medium" size="15.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets left="40.0" />
         </BorderPane.margin>
      </VBox>
    </left>
    <right>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="40.0">
         <children>
            <ImageView fx:id="player2" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            <Label text="PLAYER 2" textFill="WHITE">
               <font>
                  <Font name="Yu Gothic Medium" size="15.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets right="40.0" />
         </BorderPane.margin>
      </VBox>
    </right>
    <bottom>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="btnNext" disable="true" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" style="-fx-background-radius: 10; -fx-background-color: #40B4C2;" text="NEXT" visible="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/xo.png" />
                     </image>
                  </ImageView>
                      <Button fx:id="btnAyuda" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" style="-fx-background-radius: 10; -fx-background-color: #40B4C2;" text="HELP">
                          <font>
                              <Font name="System Bold" size="18.0" />
                          </font>
                      </Button>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/xo.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="30.0" />
         </BorderPane.margin>
      </VBox>
    </bottom>
</BorderPane>
